    }
  ]


mixin support()
  +page-section(
          { section: "section",
            pageGrid: true,
            modGrid: "col-2"
          }
    ).support

    +column({
          level: "h1",
          realLevel: "h2",
          titleGrid: "Обеспечиваем полную техническую поддержку на&nbsp;протяжении всего жизненного цикла изделий",
    })
      .accordion(data-accordion="parent", data-single)
        each item in dataAccordion
          +accordionItem(
            {
              title: item.title,
              description: item.description,
              path: '#',
              isActive: item.isActive,
            }
          )

    +column()
      .support__img
        +img({
              path: "content",
              image: "support",
              format: "jpg",
              width: 380,
              height: 772,
              altText: "техническая поддержка"
            })
