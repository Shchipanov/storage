mixin product-information-content(data = {})
  - const {features} = data

  .product-infromation__content
    +product-information-about(
      {
        code: 'АПСМ.435241.026-01',
        heading: 'СИПБ1КА.10-11 Rack/Tower',
        text: 'Онлайн ИБП СИПБ2КА.10-11 двойного преобразования 2&nbsp;кВт для 19-ти дюймовой стойки высотой 2U с&nbsp;встроенными аккумуляторами',
      }
    )
    +product-table([
      {
        info: 'Серия',
        info2: 'Технология',
        value: 'СИПБ 1-3 кВА Rack/Tower',
        value2: 'Online ИБП',
      },
      {
        info: 'Мощность',
        info2: 'Входное напряжение',
        value: '1000 вт',
        value2: '300 в',
      },
      {
        info: 'Вес',
        info2: 'Габаритные размеры',
        value: '24.5 кг',
        value2: '440 х 600 х 86.5 мм',
      }
    ])
    .product-information__buttons
      +btn({
        text: "Запросить КП",
        classMods: ["primary"],
      })
      +btn({
        text: "Добавить в сравнение",
        classMods: ["secondary"],
        icon: {
          name: "icon-comparison",
          width: "24",
          height: "24",
        },
      })
    +tabs({
      controlBtns: [
        "Описание",
        "Характеристики",
        "Документы",
        "Где купить",
      ],
    })
      .tabs__element.content-tab-element(data-tabs='element')
        +product-description-card().tabs__card
      .tabs__element.content-tab-element(data-tabs='element')
        +product-features-table(features).tabs__card
      .tabs__element.content-tab-element(data-tabs='element')
        //-+documentation(componentDocumentation)
      .tabs__element.content-tab-element(data-tabs='element')
        +product-information-location()
